---
import Navbar from '../components/Navbar.astro';
import Carousel from '../components/Carousel.jsx';
import CardsMisionVisionPolicies from '../components/MissionVisionPolicies.astro';
import ProductCards from "../components/ProductCards.jsx";
import CardsServicios from "../components/CardsServicios.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Fertilizantes - Landing</title>
	<link rel="icon" href="/logo.ico" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="bg-[var(--color-bg-body)] text-[var(--color-text-primary)] transition-colors duration-500 relative">
    <Navbar />

    <main class="pt-20"> {/* padding-top para no tapar contenido con navbar fixed */}
      <Carousel client:load /> {/* React se carga en cliente */}
	        <CardsMisionVisionPolicies /> {/* Aquí se insertan las cards */}

			<h3 class="text-center text-5xl text-[var(--color-text-blackandWhite)]">Nuestro Catalogo</h3>

			<ProductCards client:load />
 <!-- Aquí llamas el componente -->
    <CardsServicios />

    </main>

    <style>
      :global(body) {
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>
